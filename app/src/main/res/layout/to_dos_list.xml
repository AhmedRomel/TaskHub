<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp">


    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/senderThumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        />

    <!-- Task owner name -->
    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/senderThumbnail"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/senderThumbnail"
        android:layout_toLeftOf="@+id/priority_photo"
        android:layout_toRightOf="@+id/senderThumbnail"
        android:layout_toStartOf="@+id/priority_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/owner_Name"
        android:textStyle="bold" />


    <!-- Task title -->
    <TextView
        android:id="@+id/toDo_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sender_name"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/senderThumbnail"
        android:layout_toLeftOf="@+id/priority_photo"
        android:layout_toRightOf="@+id/senderThumbnail"
        android:layout_toStartOf="@+id/priority_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/task_title"/>


    <!-- Priority identifier -->
    <ImageView
        android:id="@+id/priority_photo"
        android:layout_width="16dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription"/>




</RelativeLayout>