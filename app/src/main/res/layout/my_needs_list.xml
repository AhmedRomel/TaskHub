<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp">


    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/receiverThumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <!-- Task owner name -->
    <TextView
        android:id="@+id/receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/receiverThumbnail"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/receiverThumbnail"
        android:layout_toLeftOf="@+id/task_status"
        android:layout_toRightOf="@+id/receiverThumbnail"
        android:layout_toStartOf="@+id/task_status"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/owner_Name"
        android:textStyle="bold" />


    <!-- Task title -->
    <TextView
        android:id="@+id/myNeed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/receiver_name"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/receiverThumbnail"
        android:layout_toLeftOf="@+id/task_status"
        android:layout_toRightOf="@+id/receiverThumbnail"
        android:layout_toStartOf="@+id/task_status"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/task_title" />

    <!-- Task status -->
    <TextView
        android:id="@+id/task_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/receiver_name"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold" />


</RelativeLayout>