<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saleem.testgithub.fragments.ToDoS">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/pending_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/pending_tasks"
                    android:textSize="14sp" />


                <ListView
                    android:id="@+id/newToDo_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:divider="@color/list_divider"
                    android:dividerHeight="1dp"
                    android:listSelector="@drawable/new_list_row_selector" />


                <ListView
                    android:id="@+id/toDo_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:divider="@color/list_divider"
                    android:dividerHeight="1dp"
                    android:listSelector="@drawable/list_row_selector"/>

            </LinearLayout>




    <TextView
    android:id="@+id/no_task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/No_ToDo"
    android:textStyle="bold|italic"
    android:textSize="18sp"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp" />

</FrameLayout>
